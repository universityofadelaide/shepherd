{
    "name": "ua-web-team/shepherd",
    "description": "University of Adelaide Shepherd site management system.",
    "type": "project",
    "license": "MIT",
    "repositories": [
        {"type": "git", "url": "https://github.com/previousnext/drush_cmi_tools.git"},
        {"type": "composer", "url": "https://packages.drupal.org/8"}
    ],
    "require": {
        "composer-plugin-api":                           "^1.0",
        "composer/installers":                           "^1.2",
        "cweagans/composer-patches":                     "~1.0",
        "drupal-composer/drupal-scaffold":               "^2.2",
        "predis/predis":                                 "^1.1.1",
        "universityofadelaide/openshift-client":         "dev-develop",
        "universityofadelaide/shepherd-drupal-scaffold": "~2.0",
        "wikimedia/composer-merge-plugin":               "^1.4",
        "drush/drush":                                   "9.*",
        "drupal/core":                                   "^8.6",
        "drupal/drush-cmi-tools":                        "dev-8.x-2.x",
        "drupal/devel":                                  "1.*",
        "drupal/entity_reference_revisions":             "1.*",
        "drupal/field_group":                            "1.*",
        "drupal/group":                                  "1.*@RC",
        "drupal/key_value_field":                        "1.*",
        "drupal/log_stdout":                             "1.*",
        "drupal/r4032login":                             "1.*",
        "drupal/redis":                                  "1.*",
        "drupal/route_condition":                        "^1.0@beta",
        "drupal/token":                                  "1.*"
    },
    "require-dev": {
        "webflo/drupal-core-require-dev": "~8.5"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin/",
        "sort-packages": true,
        "platform": {
            "php": "7.2.0"
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php",
            "scripts/composer/Plugin.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "@composer drupal:scaffold",
            "UniversityOfAdelaide\\Shepherd\\Plugin::scaffold"
        ],
        "post-update-cmd": [
            "echo \"Checking out dsh that scaffold overrides\"; git checkout dsh"
        ]
    },
    "extra": {
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "installer-paths": {
            "web/core":                     ["type:drupal-core"],
            "web/modules/contrib/{$name}":  ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}":   ["type:drupal-theme"],
            "web/libraries/{$name}":        ["type:drupal-library"],
            "web/drush/commands/{$name}":   ["type:drupal-drush"]
        },
        "drupal-scaffold": {
            "initial": {
                "sites/default/default.services.yml": "sites/default/services.yml",
                "sites/default/default.settings.php": "sites/default/settings.php"
            }
        }
    }
}
